
<!-- Modal -->
<div class="modal fade" id="modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">상품 목록</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        <div class="modal-body">
            <div id="div_orders"></div>
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
            </div>
        </div>
    </div>
</div>
<script type="x-handlebars-template" id="temp_orders">
    <div class="my-5">
        <h1 class="text-center mb-5">주문정보</h1>
        <div>주문번호 : [{{info.pid}}] 
            <span style="color:red;" class="ms-5">{{status1 info.status}}</span>
        </div>
        <div>받은이 : {{info.rname}} 주소 : {{info.raddress1}} {{info.raddress2}}</div>
        <div>전화번호 : {{info.rphone}}</div>
        <div>결제금액 : {{info.fmtsum}}원</div>
    </div>
    <table class="table">
        {{#each books}}
            <tr>
                <td>{{bid}}</td>
                <td><img src="{{image}}" width="30"></td>
                <td>{{title}}</td>
                <td>{{fmtprice}}원</td>
                <td>{{qnt}}</td>
                <td>{{fmtsum}}원</td>
            </tr>
        {{/each}}
    </table>
</script>
<script>
    Handlebars.registerHelper("status1", function(status){
        if(status==0){
            return "결제대기중";
        }else if(status==1){
            return "결제확인";
        }else if(status==2){
            return "배송준비중";
        }else if(status==3){
            return "배송완료";
        }else if(status==4){
            return "주문완료";
        }
    });
</script>