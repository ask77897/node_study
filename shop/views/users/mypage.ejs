<style>
    .photo {border-radius: 50%;}
</style>
<div class="my-5 row justify-content-center">
    <h1 class="text-center">마이페이지</h1>
    <div class="col-md-8 card p-5">
        <div class="row">
            <div class="col-md-3 mb-3">
                <img id="photo" class="photo" src="http://via.placeholder.com/100x100" width="100%">
            </div>
            <div class="col">
                <div class="mb-2">
                    아이디 : <%=user.uid%>
                    <a href="/users/change" id="change" class="btn btn-danger btn-sm ms-3">비밀번호 변경</a>
                </div>
                <div class="mb-2">이름 : <%=user.uname%></div>
                <div class="mb-2">전화번호 : <%=user.phone%></div>
                <div class="mb-2">주소 : <%=user.address1%> <%=user.address2%></div>
            </div>
        </div>
    </div>
    <div class="text-center my-3" id="update">
        <a class="btn" style="background-color:#6f42c1; color:#fff;" href="/users/update?uid=<%=user.uid%>">정보수정</a>
    </div>
</div>
<script>
    const photo="<%=user.photo%>"
    if(photo){
        $("#photo").attr("src", "/upload/photo/"+photo);
    }else{
        $("#photo").attr("src", "http://via.placeholder.com/150x150");
    }
    const uid="<%=user.uid%>"
    if(sessionStorage.getItem("uid")!=uid){
        $("#update").hide();
        $("#change").hide();
    }
</script>